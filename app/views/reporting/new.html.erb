<%= render 'layouts/navbar' %>
<%= form_for @report, url: reporting_index_path, html: {class: "form-horizontal", role: "form"} do |f|%>
<div class="container">
	<legend>Update LJFF!</legend>
  
  <div class="form-group">
    <%= f.label :topic, "Topic" %>
    <%= f.select :topic, Report::BASE_REPORTS, { include_blank: true }, class: "form-control" %>
  </div>
  
  <div class="form-group">
    <%= f.label :description, "Description" %>
    <%= f.text_area :description, class: "form-control" %>
  </div>
  
  <%= f.submit 'Create Report', class: ['btn', 'btn-success'] %>

</div>
<% end %>
